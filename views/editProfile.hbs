<body>
<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary"><a href="index">Home</a><a id="logout" href="logout">LOG OUT</a></h1>
      <hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img src="{{pic}}" height="20%" width="20%" id="avatarmain">

        </div>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <h3>Personal info</h3>
        
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">Username:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value={{name}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value={{email}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Description:</label>
            <div class="col-lg-8">
              	<form>
			<textarea rows="10" cols="100">{{desc}}</textarea>
		</form action="editProfile" method="POST">	
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Time Zone:</label>
            <div class="col-lg-8">
              <div class="ui-select">
                <select id="user_time_zone" class="form-control">
                  <option value="Hawaii">(GMT-10:00) Hawaii</option>
                  <option value="Alaska">(GMT-09:00) Alaska</option>
                  <option value="Pacific Time (US &amp; Canada)">(GMT-08:00) Pacific Time (US &amp; Canada)</option>
                  <option value="Arizona">(GMT-07:00) Arizona</option>
                  <option value="Mountain Time (US &amp; Canada)">(GMT-07:00) Mountain Time (US &amp; Canada)</option>
                  <option value="Central Time (US &amp; Canada)" selected="selected">(GMT-06:00) Central Time (US &amp; Canada)</option>
                  <option value="Eastern Time (US &amp; Canada)">(GMT-05:00) Eastern Time (US &amp; Canada)</option>
                  <option value="Indiana (East)">(GMT-05:00) Indiana (East)</option>
                </select>
              </div>
            </div>
          </div>
          <input type="submit" id="save" value="Save Edits">
        </form>
  </div>
</div>
</div>

<hr>
<div id="comments">
      <h3>Comments:</h3>
    <ul id="commentList">
      {{#each review}}
        <li>
        ||{{rating}}â˜…||
        <img src="{{userPic}}" class="avatar">  <span>{{user}} : {{comment}}</span>
        <hr> 
        </li>
      {{/each}}
   </ul>
</div>
<script>
  function logout()
  {
      if(confirm("This will log you out of your account. Proceed?"))
      {

        window.location.href ="index";
      }
      
  }
</script>
</body>
</html>